{
    "name": "zero-dechet/api",
    "description": "Zero Dechet API",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Vincent Chalamon",
            "email": "vincentchalamon@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-PDO": "*",
        "ext-apcu": "*",
        "ext-curl": "*",
        "ext-date": "*",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-hash": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pcre": "*",
        "ext-pdo_pgsql": "*",
        "ext-redis": "*",
        "ext-reflection": "*",
        "ext-spl": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*",
        "api-platform/api-pack": "^1.1",
        "api-platform/core": "^2.3@dev",
        "csa/guzzle-bundle": "^3.1",
        "doctrine/doctrine-migrations-bundle": "^1.3",
        "finesse/swiftmailer-defaults-plugin": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "jsor/doctrine-postgis": "^1.7",
        "liip/monitor-bundle": "^2.7",
        "nelmio/cors-bundle": "^1.5",
        "sensiolabs/security-checker": "^5.0",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.3",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/yaml": "^4.0",
        "tilleuls/forgot-password-bundle": "^1.2",
        "webonyx/graphql-php": "^0.11.5"
    },
    "require-dev": {
        "alexandresalome/mailcatcher": "^1.2",
        "behat/behat": "^3.4",
        "behat/mink": "^1.7",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.3",
        "behat/symfony2-extension": "^2.1.4",
        "behatch/contexts": "^3.0",
        "dama/doctrine-test-bundle": "^5.0",
        "friendsofphp/php-cs-fixer": "^2.13",
        "hautelook/alice-bundle": "^2.3",
        "phpstan/phpstan": "^0.10.3",
        "symfony/debug-bundle": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/phpunit-bridge": "^4.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "^4.0",
        "vincentchalamon/api-extension": "^1.0@beta"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "App\\Faker\\": "fixtures/Faker/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "compile": [
            "php bin/console doctrine:migrations:migrate"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
